<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kieran.regions.Instructions">

    <TextView
        android:id="@+id/instructionTitle"
        android:text="INSTRUCTIONS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/instructionText"
        android:text="The game board is a 5 x 5 square and the goal is to enclose as many of the squares as possible. Whoever places the last square of a given enclosed region gains the number of points equal to the number of squares enclosed in the region. Once all squares are enclosed or chosen by a player, the game ends and the player with the most points win."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructionTitle"/>

    <TextView
        android:id="@+id/playerOne"
        android:text="Player One is indicated with Orange Squares"
        android:textColor="#cc5200"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/instructionText"
        android:layout_marginTop="20dp"/>

    <TextView
        android:text="Player Two is indicated with Blue Squares"
        android:textColor="#0000ff"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playerOne"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/backButton"
        android:text="Back to Home Screen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
